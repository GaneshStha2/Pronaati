    <script>
        function startTime() {
            var today = new Date();
            var h = today.getUTCHours() + 5;
            var m = today.getUTCMinutes() + 45;
            if (m > 60) {
                h = h + 1;
                m = m - 60;
            }
            var s = today.getUTCSeconds();
            var ampm = h >= 12 ? 'PM' : 'AM';
            m = checkTime(m);
            s = checkTime(s);
            h = h % 12;
            h = h ? h : 12;
            document.getElementById('txt').innerHTML = appendDateDetails() +
                h + ":" + m + ":" + s + ' ' + ampm + " (NPT)"
            var t = setTimeout(startTime, 500);

        }
        function checkTime(i) {
            if (i < 10) { i = "0" + i };  // add zero in front of numbers < 10
            return i;
        }
        function appendDateDetails() {
            var AD_BS = "AD";
            if (Riddha.config().CurrentOperationDate == "ne") {
                AD_BS = "BS";
            }
            return "<b>" + AD_BS + "</b> " + SuitableDate(Riddha.config().CurDate) + " , " + Riddha.util.getDayName(Riddha.config().CurDate).substr(0, 3) + ", "
        }
        document.body.addEventListener("keydown", function (ev) {
            // do some stuff
            if (ev.altKey == true) {
                if (ev.keyCode == 76) {
                    window.open("/user/user/lockscreen", "_self")
                }
            }
            return false; // cancels this function only
        });


    </script>
