@model RTech.Demo.Areas.Student.ViewModels.LoginViewModel
@{

    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout_PTE.cshtml";
}

@if (ViewBag.Message != null)
{
    <script type="text/javascript">
                window.onload = function () {
                    Riddha.UI.Toast("@ViewBag.Message", @ViewBag.ToastrVal);
                };
    </script>
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <!--  Start -->
    <div class="uk-section uk-section-muted uk-flex uk-flex-middle uk-animation-fade" uk-height-viewport>
        <div class="uk-width-1-1">
            <div class="uk-container">
                <div class="uk-grid-margin uk-grid uk-grid-stack" uk-grid>
                    <div class="uk-width-1-1@m">
                        <div class="uk-margin uk-width-large uk-margin-auto uk-card uk-card-default uk-card-body uk-box-shadow-large uk-border-radius-small">

                            @if (ViewBag.ActivationMessage != null)
                            {
                                <div class=" form-group text-success">
                                    @ViewBag.ActivationMessage
                                </div>
                            }

                            <h3 class="uk-card-title uk-text-center">Login</h3>
                            <hr class="uk-divider-icon">
                            <div class="uk-margin">
                                <div class="uk-inline uk-width-1-1">
                                    <span class="uk-form-icon" uk-icon="icon: mail"></span>
                                    @Html.TextBoxFor(model => model.EmailUserName, new { @class = "uk-input uk-form-large", @placeholder = "Username/Email" })
                                </div>
                                @Html.ValidationMessageFor(model => model.EmailUserName, "", new { @class = "text-danger" })
                            </div>
                            <div class="uk-margin">
                                <div class="uk-inline uk-width-1-1">
                                    <span class="uk-form-icon" uk-icon="icon: lock"></span>
                                    @Html.TextBoxFor(model => model.Password, new { @class = "uk-input uk-form-large", @type = "password", @placeholder = "Password" })
                                </div>
                                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                            </div>
                            <div class="uk-margin uk-text-right@s uk-text-center uk-text-small">
                                <a href="@Url.Action("ForgotPassword","LogIn")">Forgot Password?</a>
                            </div>

                            <div class="uk-margin">
                                <button type="submit" class="uk-button uk-button-primary uk-button-large uk-width-1-1" href="dashboard.php">Login</button>
                            </div>
                            <div class="uk-text-small uk-text-center">
                                Not registered yet? <a href="@Url.Action("Index","SignUp", new { @Area = "Student"})">Sign Up</a>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
<!--  End -->



