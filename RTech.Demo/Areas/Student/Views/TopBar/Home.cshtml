                        <!-- hover -->
                    </a>
                </div>

            </div>
            <!--  -->
            <!--  -->
            <div>

                <div class="uk-higlight-item">
                    <a href="">
                        <div class="uk-high-img">
                            <img src="/images/icon/hig/3.svg" alt="Enriching lives">
                        </div>
                        <h4>Enriching lives</h4>
                        <!-- hover -->
                        <div class="uk-show-hover uk-visible@m">
                            <div class="uk-high-img">
                                <img src="/images/icon/hig/3.svg" alt="Enriching lives">
                            </div>
                            <h4>Enriching lives</h4>
                            <p>
                                Breathe easy knowing that you have access to the most comprehensive and accurate material for NAATI CCL. From difficult vocabulary to simultaneous translation, everything has been covered by the highest-rated

                            </p>

                        </div>
                        <!-- hover -->
                    </a>
                </div>

            </div>
            <!--  -->

        </div>
    </div>
</section>
<!-- highlight end -->
<!-- top scores -->
<section class="uk-section">

    <div class="uk-container">

        <div class="uk-main-title uk-text-center uk-margin-bottom">
            <h2 class=" uk-text-bold">Top Scores</h2>
        </div>

        <div class="uk-text-center  uk-grid-match" uk-grid>

            <div class="uk-width-1-3@m">


                <div class="uk-pte-head uk-light uk-padding-small">

                    <h2 class="uk-margin-remove uk-text-bold">Naati</h2>
                    <h3 class="uk-margin-remove uk-text-bold">90</h3>
                </div>
                <div class="uk-pte-user-info uk-padding-small">

                    <div class="uk-user-pte">
                        <img src="/images/user.jpg">
                    </div>

                </div>
                <div class="uk-pte-user-name uk-light uk-flex-center   uk-flex-middle uk-flex uk-text-center">
                    <h3 class="uk-text-bold uk-margin-remove">Shami Shrestha</h3>
                </div>


            </div>
            <div class="uk-width-expand@m">

                <table class="tablescore">
                    <thead>
                        <tr>
                            <th width="33%">Name</th>
                            <th width="33%">Country</th>
                            <th width="33%">Score</th>
                        </tr>
                    </thead>

                    <tbody>
                        @{
                            foreach (var item in Model.Scorers)
                            {
                                <tr>
                                    <td width="33%">@item.Name</td>
                                    <td width="33%">@item.Country</td>
                                    <td width="33%">@item.Score</td>
                                </tr>
                            }
                        }




                    </tbody>

                </table>

                <div class="uk-text-right uk-margin-top">
                    <a href="@Url.Action("ScorerList", "TopBar", new { @Area= "Student"})" class="uk-button uk-button-small uk-button-primary">More <span uk-icon="icon: chevron-right;"></span></a>
                </div>

            </div>
        </div>
    </div>
</section>
<!-- top scores end -->
<!-- country -->
<section class="uk-section uk-bg-dark-blue uk-light  uk-arrow-down    uk-relative">

    <div class="uk-container uk-container-small">
        <div class="uk-main-title uk-text-center uk-margin-bottom">
            <h2 class=" uk-text-bold">Naati Languages</h2>
        </div>

        <ul class="uk-list-languages uk-text-center uk-child-width-1-6@s uk-child-width-1-6@m " uk-grid>

            <li><a uk-toggle="target: #uk-select-packages"><span><img src="/images/icon/flag/english.svg"></span> English</a></li>
            <li><a uk-toggle="target: #uk-select-packages"><span><img src="/images/icon/flag/spanish.svg"></span> Spanish</a></li>
            <li><a uk-toggle="target: #uk-select-packages"><span><img src="/images/icon/flag/hindi.svg"></span> Hindi</a></li>
            <li><a uk-toggle="target: #uk-select-packages"><span><img src="/images/icon/flag/arabic.svg"></span> Arabic</a></li>
            <li><a uk-toggle="target: #uk-select-packages"><span><img src="/images/icon/flag/franch.png"></span> French</a></li>
            <li><a uk-toggle="target: #uk-select-packages"><span><img src="/images/icon/flag/portuguese.svg"></span> Portuguese</a></li>
            <li><a uk-toggle="target: #uk-select-packages"><span><img src="/images/icon/flag/bengali.png"></span> Bengali</a></li>
            <li><a uk-toggle="target: #uk-select-packages"><span><img src="/images/icon/flag/russian.svg"></span> Russian</a></li>
            <li><a uk-toggle="target: #uk-select-packages"><span><img src="/images/icon/flag/german.png"></span> German</a></li>
            <li><a uk-toggle="target: #uk-select-packages"><span><img src="/images/icon/flag/japanese.png"></span> Japanese</a></li>
            <li><a uk-toggle="target: #uk-select-packages"><span><img src="/images/icon/flag/korean.svg"></span> Korean</a></li>
            <li><a uk-toggle="target: #uk-select-packages"><span><img src="/images/icon/flag/danish.png"></span> Danish</a></li>
        </ul>

        <div class="uk-clearfix uk-text-center uk-margin-large-top">
            <a href="@Url.Action("NaatiLanguages","TopBar", new { @Area = "Student"})" class="uk-button uk-button-primary">More Languages<span uk-icon="icon: chevron-right;"></span></a>
        </div>

    </div>
</section>

<!-- country end -->
<!-- package -->
<section class="uk-section uk-background-muted  ">

    <div class="uk-container">

        <div class="uk-main-title uk-text-center uk-margin-bottom">
            <h2 class=" uk-text-bold">Packages</h2>
        </div>
        <div class="uk-child-width-1-2@s uk-child-width-1-3@m uk-text-center  " uk-grid uk-height-match="target: .advance-pr-table.pricing-table">
            <!--  -->
            @{
                foreach (var item in Model.Packages)
                {
                    <div>
                        <div>
                            <div class="advance-pr-table pricing-table">
                                <div class="pricing-table-header">
                                    <h3 class="heading">@item.Title</h3>
                                    <span class="currency">AUD$</span>
                                    <span class="price-value">@item.Price</span>
                                    <span class="month">/@item.Duration weeks course</span>
                                </div>
                                <h3 class="uk-text-bold">@item.Title</h3>
                                <div class="pricing-content">
                                    <ul>
                                        <li> Ideal for last minute NAATI CCL test preparation</li>

                                        <li>@item.Duration weeks access</li>

                                        <li> Access from any internet connected device</li>

                                        <li> 10 mock tests</li>

                                        <li> Few instructions</li>

                                        <li> Limited simulation of test day</li>
                                    </ul>
                                </div>

                                <a href="@Url.Action("Index", "Payment", new { @Area= "Student", @Code=item.Code, @PaymentFor = Riddhasoft.Setup.Entity.PaymentFor.NaatiPackage })" class="pricing-table-signup">Enroll Now</a>
                            </div>
                        </div>
                    </div>
                }
            }


            <!--  -->


        </div>

    </div>
</section>
<!-- package end -->

<!-- testimonials   -->
<section class="uk-section-small  ">

    <div class="uk-container uk-container-small uk-text-center">

        <div class="uk-position-relative uk-visible-toggle uk-testimonials" tabindex="-1" uk-slider="autoplay: true autoplay-interval: 100">
            <ul class="uk-slider-items uk-child-width-1-1 uk-child-width-1-1@s uk-child-width-1-1@m">
                <!--  -->
                @{
                    foreach (var item in Model.Testimonials)
                    {
                        <li>
                            <div class="uk-testimonials-list uk-padding-large">
                                <div class="uk-image-user">
                                    <img src="@item.Image" alt="">
                                </div>
                                <p>
                                    @item.Message
                                </p>
                                <h5>   @item.Name   <span> Score: @item.Score</span></h5>

                            </div>
                        </li>
                    }
                }


                <!--  -->
               
            </ul>
            <a class=" uk-position-center-left uk-position-small uk-hidden-hover uk-slidenav-large" href="#" uk-slidenav-previous uk-slider-item="previous"></a>
            <a class=" uk-position-center-right uk-position-small uk-hidden-hover uk-slidenav-large" href="#" uk-slidenav-next uk-slider-item="next"></a>
        </div>
    </div>
</section>

<!-- testimonials end -->
<!-- blog start-->
<section class="uk-section uk-background-muted   ">

    <div class="uk-container ">
        <div class="uk-sec-heading uk-clearfix">
            <h2>Recent <strong>Blog</strong></h2>
            <div class="uk-align-right">
                <a href="@Url.Action("Blog", "Blog",new { @Area = "Student"})" class="uk-button uk-button-primary">  More Blog   </a>
            </div>
        </div>


        <div class="uk-child-width-1-2@m   " uk-grid>


            @{

                foreach (var item in Model.Blogs)
                {
                    <div>
                        <div class="uk-blog-overlay uk-light">
                            <div class="uk-img-450 uk-relative uk-overlay-img">
                                <img src="@item.Image" alt="">
                                <div class="uk-blog-overlay-content uk-position-center  ">

                                    <div class="uk-meta">@item.Day, @item.DayDate @item.Month @item.Year</div>
                                    <h3 class="uk-margin-remove"><a href="">@item.Title</a></h3>
                                </div>
                            </div>

                        </div>
                    </div>
                }
            }
        </div>
    </div>
</section>
<!-- blog end-->
