@model List<RTech.Demo.Areas.Student.ViewModels.NaatiMocktestPackageVm>
@{
    ViewBag.Title = "AllMockTests";
    Layout = "~/Views/Shared/_Layout_PTE.cshtml";
}

<!--  -->
<section class="uk-section-small uk-bg-dark-blue uk-light  uk-text-center uk-arrow-down uk-relative  ">

    <div class="uk-container  ">
        <h2 class="uk-margin-remove uk-text-bold"> Mock Test</h2>
        <ul class="uk-breadcrumb uk-flex uk-flex-center">
            <li><a href="@Url.Action("Home","TopBar", new { @Area = "Student"})">Home</a></li>
            <li><span> Mock Test</span></li>
        </ul>
    </div>

</section>
<!--  -->
<!--  -->
<section class="uk-section-large uk-bg-mudred">
    <div class="uk-container ">

        <div class="uk-child-width-1-2@s uk-child-width-1-3@m uk-text-center  " uk-grid uk-height-match="target: .advance-pr-table.pricing-table">

            @{
                foreach (var item in Model)
                {
                    <!--  -->
                    <div>
                        <div>
                            <div class="advance-pr-table pricing-table ">
                                <div class="pricing-table-header">
                                    <h3 class="heading">@item.Title</h3>
                                    <span class="currency">AUD$ </span>
                                    <span class="price-value">@item.Price</span>
                                    <span class="month">/@item.Duration days course</span>
                                </div>
                                <h3 class="uk-text-bold">@item.Title</h3>
                                <div class="pricing-content">
                                    <ul>
                                        <li> @Html.Raw(item.Description) </li>

                                        <li>@item.Duration days access</li>

                                        <li> Access from any internet connected device</li>
                                        <div hidden class="goexpress-more">

                                            <li> Few instructions</li>

                                            <li> Limited simulation of test day</li>
                                        </div>

                                        <li><a uk-toggle="target: .goexpress-more">More</a></li>
                                    </ul>
                                </div>

                                <a href="@Url.Action("Index","Payment", new {Area="Student", @Code = item.Code,@PaymentFor = Riddhasoft.Setup.Entity.PaymentFor.NaatiMocktest })" class="pricing-table-signup active">Enroll Now</a>
                            </div>
                        </div>
                    </div>
                    <!--  -->

                }
            }


            <!--  -->

        </div>

    </div>
</section>
