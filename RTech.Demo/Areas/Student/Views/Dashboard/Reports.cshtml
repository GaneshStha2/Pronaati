@model RTech.Demo.Areas.Student.ViewModels.ReportsViewModel
@{
    ViewBag.Title = "Reports";
    Layout = "~/Views/Shared/_Layout_PTE.cshtml";
}



<!--  Start -->

<section class="uk-section uk-section-muted    uk-animation-fade ">

    <div class="uk-container">

        <div class="uk-dashboard-wrapper">
            <div class="uk-db-header ">
                <h3>Report</h3>
            </div>
            <div class="uk-db-border uk-padding uk-bg-white ">

                <table class="uk-table uk-table-striped ">
                    <thead>
                        <tr>
                            <th>SN</th>
                            <th>Title</th>
                            <th>Date</th>
                            <th>View Package</th>
                        </tr>
                    </thead>

                    @{ int i = 0;}
                    @foreach (var item in Model.ReportGridVm)
                    {
                        i++;


                        <tr>
                            <td>@i</td>
                            <td>@item.MockTestSetName</td>
                            <td>@item.Date</td>

                            @if (item.IsReportReady == true)
                            {
                                <td><a href="@Url.Action("ViewMockTestReport", "Dashboard", new {@mockTestId= item.MockTestId})" class="uk-button uk-button-small uk-button-primary" target="_blank">view report</a></td>

                            }
                            else
                            {
                                <td style="color:red;">Result Processing</td>
                            }
                        </tr>
                    }
                    <tbody></tbody>
                </table>
            </div>

            <div class="uk-db-footer uk-text-center uk-padding-small">
                <a href="@Url.Action("Index","DashBoard" , new { @Area = "Student"})" class="uk-button  uk-button-danger uk-border-pill"><span uk-icon="chevron-left"></span>Back</a>
            </div>
        </div>
    </div>

</section>


<!--  End -->
