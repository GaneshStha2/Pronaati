@model RTech.Demo.Areas.Student.ViewModels.SynonymBoosterViewModel

@{
    ViewBag.Title = "SynonymBooster";

    Layout = "~/Views/Shared/_Layout_PTE.cshtml";

    string radioClass = "radio-danger";

    string CorrectAnswer = "";
    if (Model != null)
    {
        CorrectAnswer = Model.CorrectAnswer ?? "";
    }
}




<!--  Start -->
<div class="test-waraper">
    <div class="container   ">
        <div class="row">
            <div class="col-lg-12 mt40">
                <h4>Synonym Booster</h4>
                <!--  -->

                @if (Model == null)
                {
                    <div class="start-test">

                        <div class="question">
                            <h5>No Question Available</h5>
                            @*<h3>@Model.Word <small>(@Model.WordType)</small></h3>*@

                        </div>
                        <div class="clearfix"></div>
                    </div>
                }
                else
                {
                    <div class="start-test">

                        <div class="question">
                            <h5>The word is:</h5>
                            <h3>@Model.Word <small>(@Model.WordType)</small></h3>

                        </div>
                        <div class="clearfix"></div>
                    </div>
                    <!--  -->
                    <!--  -->
                    <div class="start-test">

                        <div class="answer">
                            <h5>Which on is not the synonym of the word.</h5>
                            <div class="checkox-area">

                                @{ int i = 0;}
                                @foreach (var item in Model.OptionsList)
                                {
                                    i++;
                                    if (item.IsAnswer == true)
                                    {
                                        radioClass = "radio-success";

                                    }
                                    else
                                    {
                                        radioClass = "radio-danger";
                                    }
                                    <!--  -->
                                    <div class="radio  @radioClass">
                                        <input type="radio" name="radio1" id="radio+@i" value="option1">
                                        <label for="radio+@i">
                                            @item.Option
                                        </label>
                                    </div>
                                }
                            </div>




                        </div>
                        <div class="clearfix"></div>
                    </div>
                    <!--  -->
                }
            </div>

            <div class="clearfix"></div>
        </div>
    </div>
</div>
<div class="footer-button">
    <div class="container">
        <a href="avoide:javascript;" title="" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample" class="ft-btn button-check">Check Answer</a>
        <span class="answer-text collapse" id="collapseExample">Academic : @CorrectAnswer</span>
        <a href="@Url.Action("BoosterCollocation" , "Course" , new { @courseId = ViewBag.CourseId})" title="" class="ft-btn button-next">Next</a>
    </div>
</div>
<!--  End -->
