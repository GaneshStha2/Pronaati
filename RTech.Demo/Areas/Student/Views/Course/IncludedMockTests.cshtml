@model RTech.Demo.Areas.Student.ViewModels.IncludedTestListViewModel


@{
    ViewBag.Title = "IncludedMockTests";
    Layout = "~/Views/Shared/_Layout_PTE.cshtml";
}

<!--  -->
<section class="uk-section-small uk-bg-dark-blue uk-light  uk-text-center uk-arrow-down uk-relative  ">

    <div class="uk-container  ">
        <h2 class="uk-margin-remove uk-text-bold">PackageName</h2>
        <ul class="uk-breadcrumb uk-flex uk-flex-center">
            <li><a href="@Url.Action("Home","TopBar", new { @Area = "Student"})">Home</a></li>
            <li><span>NAATI CCL EXPRESS COURSE </span></li>
        </ul>
    </div>

</section>
<!--  -->
<!--  -->
<!-- blog end-->

<section class="uk-section">

    <div class="uk-container ">
        <div class="uk-text-left" uk-grid>
            <div class="uk-width-1-4@m uk-first-column">
                <div class="uk-card uk-card-default uk-card-body uk-sticky" style="z-index: 88;" uk-sticky="bottom: #footer">
                    <ul class="uk-nav-default uk-nav-parent-icon uk-nav" uk-nav="">
                        <li class="uk-active"><a href="package-details.php">Package Overview</a></li>
                        <li class="uk-parent uk-open">
                            <a href="#">Course Material</a>
                            <ul class="uk-nav-sub" aria-hidden="false">
                                <li><a href="@Url.Action("VideoMaterials","Course", new { @Area = "Student",@packageId = Model.PackageId })">Video</a></li>
                                <li><a href="@Url.Action("PdfMaterial","Course", new { @Area = "Student",@packageId = Model.PackageId })">PDF</a></li>
                              @*  <li><a href="@Url.Action("AudioMaterial","Course", new { @Area = "Student",@packageId = Model.PackageId })">Audio</a></li>*@
                            </ul>
                        </li>
                        <li><a href="@Url.Action("IncludedMockTests","Course", new { @Area="Student",  @packageId = Model.PackageId, @testType = Riddhasoft.Setup.Entity.Package.PackageTestType.RealTest})">Mock Test - Scored by Naati Assessors</a></li>
                        <li><a href="@Url.Action("IncludedMockTests","Course", new { @Area="Student",  @packageId = Model.PackageId ,@testType = Riddhasoft.Setup.Entity.Package.PackageTestType.PracticeTest})">Practice Mock Test - Unscored with Answers</a></li>

                    </ul>
                </div><div class="uk-sticky-placeholder" style="height: 226px; margin: 0px;" hidden=""></div>

            </div>
            <div class="uk-width-expand@m">
                <div class="uk-db-header  uk-card-default ">
                    <h3> Mock Test</h3>
                </div>
                <div class="uk-card uk-card-default uk-card-body">
                    <div class="uk-child-width-1-2@s uk-grid-match uk-text-center" uk-grid>
                        <!--  -->
                        @{
                            foreach (var item in Model.IncludedTests)
                            {
                                <div>
                                    <div class="uk-mocktest-inlist uk-border-1 uk-padding">
                                        @{
                                            if (item.PackageTestType == Riddhasoft.Setup.Entity.Package.PackageTestType.PracticeTest)
                                            {
                                                <h3 class="uk-margin-small"><a href="@Url.Action("MockTestDialogues","PracticeTest", new { @Area="MockTest",@mockTestId = item.Id})">@item.Title</a></h3>
                                                <a href="@Url.Action("MockTestDialogues","PracticeTest", new { @Area="MockTest",  @mockTestId = item.Id})" class="uk-button uk-button-primary">View Dialogues</a>
                                            }

                                            else
                                            {
                                                <h3 class="uk-margin-small"><a href="@Url.Action("MockTestDialogues","MockTestHome", new { @Area="MockTest",@mockTestId  = item.Id, @testSource = Riddhasoft.MockTest.Entity.TestSource.Package})">@item.Title</a></h3>
                                                <a href="@Url.Action("MockTestDialogues","MockTestHome", new { @Area="MockTest",@mockTestId  = item.Id, @testSource = Riddhasoft.MockTest.Entity.TestSource.Package})" class="uk-button uk-button-primary">View Dialogues</a>
                                            }
                                        }

                                    </div>
                                </div>
                            }
                        }

                        <!--  -->

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

