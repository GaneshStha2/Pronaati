@model List<RTech.Demo.Areas.Student.ViewModels.ClassRoomCourseMasterViewModel>
@{
    ViewBag.Title = "CourseList";
    Layout = "~/Views/Shared/_Layout_PTE.cshtml";
}

<!--  Start -->
<div class="list-packages">
    <div class="bg-white details_training    ">
        <div class="container   ">
            <div class="row">

                <div class="col-lg-3">
                    <img src="~/Images/node.jpg" />
                </div>
                <div class="col-lg-9">
                    <h3>PTE Classroom Training</h3>
                    <p>Lorem ipsum dolor sit amet, consectetuer adipiscing elit. Aenean commodo ligula eget dolor. Aenean massa. Cum sociis natoque penatibus et magnis dis parturient montes, nascetur ridiculus mus.</p>
                </div>
                <div class="clearfix"></div>
            </div>
        </div>
    </div>

    <div class=" ">



        <div class="container   ">


            <div class="col-lg-12">
                <div class="slider-list row">


                    <div class="row  ">
                        <!--  -->
                        @foreach (var item in Model)
                        {
                            <div class="col-lg-3">
                                <a href="@Url.Action("CourseDetails", "Course", new { Id = item.CourseId } )" title="">
                                    <div class="package-list">
                                        <div class="package-image" width="256" height="148">

                                            <img src="@item.ImageUrl" alt="">

                                        </div>
                                        <div class="package-body">
                                            <h5>
                                                Course Code : @item.CourseCode
                                                @item.CourseName
                                            </h5>
                                            <p></p>
                                            <a href="@Url.Action("Index", "Payment", new { Code = item.CourseCode, PaymentFor=Riddhasoft.Setup.Entity.PaymentFor.OnlineCourse } )" title="" class="buy-now pull-left">Buy </a>
                                            <div class="price">
                                                <span class="current-price">@item.Amount</span>  <span class="old-price"><strike>@*$179.99*@</strike></span>
                                            </div>
                                        </div>
                                    </div>
                                </a>

                            </div>
                            <!--  -->
                            <!--  -->
                        }
                      

                    </div>
                </div>
            </div>




        </div>
    </div>
</div>
<!--  End -->
