                                    <tr data-bind="with:OnlineTrainingDetail">

                                        <td></td>
                                        @*<td>
                                                <input type="text" class="form-control" data-bind="value:FileName" />
                                            </td>*@
                                        <td data-bind="text:FileName"></td>
                                        <td>
