                                            Browse <input data-bind="click:$root.OpenFileManager" type="file" value=" " class="btn btn-flat btn-file btn-success">
                                        </label>
                                    </div>
                                </div>
                                <div class=" col-lg-12 form-group">
                                    <label class="col-lg-12 left" for="Number">@T("Description")</label>
