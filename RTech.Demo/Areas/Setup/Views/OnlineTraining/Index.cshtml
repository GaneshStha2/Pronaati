                                <thead class="primary bg-blue">
                                    <tr>
                                        <th class="text-center col-lg-2">SN</th>
                                        <th class="col-lg-4">File Name</th>
                                        <th class="col-lg-4">File Type</th>
                                        <th class="col-lg-3">File</th>
                                        <th class="col-lg-3">Action</th>
                                    </tr>
                                </thead>
