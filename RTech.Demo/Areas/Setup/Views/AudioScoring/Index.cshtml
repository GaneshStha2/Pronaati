<section class="content-header">
    <h1>
        @T("Mocktest")
        <sup class="text-blue">@T("Scoring")</sup>

    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> @T("Setup")</a></li>
        <li class="active">@T("Mocktest Scoring")</li>
    </ol>
</section>
