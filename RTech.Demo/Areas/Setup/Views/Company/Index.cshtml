@{
    ViewBag.Title = "Index";
    Layout = Request.IsAjaxRequest() ? null : "~/Views/Shared/_Layout_Adminlte.cshtml";
}
<style>
</style>
<section class="content-header">
    <h1>
        Company
        <sup class="text-green">Creation</sup>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>

        <li class="active">Customer</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <!-- Company Modal -->
    <div class="modal" id="companyCreationModel">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <header><h4 class="text-green">Company Creation</h4></header>
                </div>
                <div class="modal-body">
                    <div class="form-horizontal" data-bind="with:Company">
                        <div class="form-group col-lg-6">
                            <div class="required">
                                <label class="col-lg-5 control-label" for="Number">Code</label>
                                <div class="col-lg-6">
                                    <input type="text" class="form-control" required data-bind="value:Code,event:{change:$root.CheckDuplicateSNo}" id="form-group-input " placeholder="Code">
                                </div>
                            </div>
                        </div>
                        <div class="form-group col-lg-6">
                            <div class="required">
                                <label class="col-lg-5 control-label" for="Number">Name</label>
                                <div class="col-lg-6">
                                    <input type="text" class="form-control" required data-bind="value:Name" id="form-group-input " placeholder="Name">
                                </div>
                            </div>
                        </div>
                        <div class="form-group col-lg-6">
                            <div class="required">
                                <label class="col-lg-5 control-label" for="Number">Address</label>
                                <div class="col-lg-6">
                                    <input type="text" class="form-control" required data-bind="value:Address" id="form-group-input " placeholder="Address">
                                </div>
                            </div>
                        </div>
                        <div class="form-group col-lg-6">
                            <div class="required">
                                <label class="col-lg-5 control-label" for="Number">Contact Number</label>
                                <div class="col-lg-6">
                                    <input type="text" class="form-control" required data-bind="value:ContactNo" id="form-group-input " placeholder="Contact Number">
                                </div>
                            </div>
                        </div>
                        <div class="form-group col-lg-6">
                            <div class="required">
                                <label class="col-lg-5 control-label" for="Number">Contact Person</label>
                                <div class="col-lg-6">
                                    <input type="text" class="form-control" required data-bind="value:ContactPerson" id="form-group-input " placeholder="Contact Person">
                                </div>
                            </div>
                        </div>
                        <div class="form-group col-lg-6">
                            <div class="required">
                                <label class="col-lg-5 control-label" for="Number">Email</label>
                                <div class="col-lg-6">
                                    <input type="text" class="form-control" required data-bind="value:Email,event:{change:$root.CheckDuplicateEmail}" id="form-group-input " placeholder="Email">
                                </div>
                            </div>
                        </div>
                        <div class="form-group col-lg-6">
                            <label class="col-lg-5 control-label" for="Number">Web</label>
                            <div class="col-lg-6">
                                <input type="text" class="form-control" required data-bind="value:WebUrl" id="form-group-input " placeholder="WebUrl">
                            </div>
                        </div>
                        <div class="form-group col-lg-6">
                            <label class="col-lg-5 control-label" for="Number">PAN</label>
                            <div class="col-lg-6">
                                <input type="text" class="form-control" required data-bind="value:PAN" id="form-group-input " placeholder="PAN">
                            </div>
                        </div>
                        @*<div class="form-group col-lg-6">
                                <label class="col-lg-5 control-label" for="Number">User Name</label>
                                <div class="col-lg-6">
                                    <input type="text" class="form-control" required data-bind="value:$root.UserName" id="form-group-input " placeholder="User Name">
                                </div>
                            </div>
                            <div class="form-group col-lg-6">
                                <label class="col-lg-5 control-label" for="Number">Password</label>
                                <div class="col-lg-6">
                                    <input type="text" class="form-control" required data-bind="value:$root.Password" id="form-group-input " placeholder="Password" onkeypress="return RestrictSpace()">
                                </div>
                            </div>
                            <div class="form-group col-lg-6">
                                <div class="col-lg-3"></div>
                                <div class="col-lg-9">
                                    <span data-bind="text:$root.PasswordInfo,attr:{class:$root.PasswordInfoStyle}"></span>
                                </div>
                            </div>*@
                        <div class="form-group col-lg-6">
                            <div class="col-lg-2"></div>
                            <div class="col-lg-6 text-center">
                                <img class="img-rounded " style="cursor:pointer" width="120" data-bind="attr: {src: LogoUrl() || '/Images/logo-default.png'}" />
                                <label class="btn btn-success btn-file col-lg-12">
                                    Browse <input data-bind="fileUpload: {value:LogoUrl,type:'image'}" type="file" value=" " class="btn btn-flat btn-file btn-success" hidden />
                                </label>
                            </div>
                        </div>
                        <div class="form-group col-lg-12">
                            <div class="col-lg-5"></div>
                            <div class="col-lg-7">
                                <input type="submit" data-bind="click:$root.CreateUpdate,createUpdateText:$root.ModeOfButton" name="Save" class="btn btn-success" value="Save" />
                                <input type="button" data-bind="click:$root.Reset" name="Reset" value="Reset" class="btn btn-default" />
                                <input type="button" id="close" data-bind="click:$root.CloseModal" value="Back" class="btn btn-default" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">

                </div>
            </div>
        </div>
    </div>
    <div class="modal" id="companyLoginModal">
        <div class="modal-dialog modal-sm">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <header><h4 class="text-success text-center"> Login Registration</h4></header>
                </div>
                <div class="modal-body">
                    <div class="form-horizontal" data-bind="with:CompanyLogin">
                        <div class="form-group col-lg-12">
                            <label class="col-lg-4 control-label" for="Number">User</label>
                            <div class="col-lg-8">
                                <input type="text" class="form-control" required data-bind="value:UserName" id="form-group-input " placeholder="User Name">
                            </div>
                        </div>
                        <div class="form-group col-lg-12">
                            <label class="col-lg-4 control-label" for="Number">@T("Password")</label>
                            <div class="col-lg-8">
                                <input type="text" class="form-control" required data-bind="value:Password" id="form-group-input " placeholder="Password" onkeypress="return RestrictSpace()">
                            </div>
                        </div>
                        <div class="form-group col-lg-12">
                            <span data-bind="text:$root.PasswordInfo,attr:{class:$root.PasswordInfoStyle}"></span>
                        </div>
                        <div class="form-group col-lg-12">
                            <div class="col-lg-5"></div>
                            <div class="col-lg-7">
                                <input type="button" data-bind="click:$root.RegisterCompanyLogin" class="btn btn-success" title="Register company login" value="Register">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                </div>
            </div>
        </div>
    </div>

    <div class="modal" id="companyLicenseModal">
        <div class="modal-dialog modal-sm">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <header><h4 class="text-success text-center"> Company License</h4></header>
                </div>
                <div class="modal-body">
                    <div class="form-horizontal" data-bind="with:CompanyLicense">
                        <div class="form-group col-lg-12" data-bind="visible:$root.LicenseStatus()=='Renew'">
                            <label class="col-lg-6 control-label" for="Number">Renew(Days)</label>
                            <div class="col-lg-6">
                                <input type="text" min="0" max="5" class="form-control" required data-bind="mask:'number', value:RenewDays,event:{change:$root.RenewLicense}">
                            </div>
                        </div>
                        <div class="form-group col-lg-12">
                            <label class="col-lg-6 control-label" for="Number">Period(Days)</label>
                            <div class="col-lg-6">
                                <input type="text" min="0" max="5" class="form-control" required data-bind="mask:'number', value:LicensePeriodInDays,enable:$root.LicenseStatus()!='Renew',event:{change:$root.GetExpiryDate}" id="form-group-input " placeholder="LicensePeriod">
                            </div>
                        </div>
                        <div class="form-group col-lg-12">
                            <label class="col-lg-6 control-label" for="Number">Issue Date</label>
                            <div class="col-lg-6">
                                <input type="text" class="form-control" required data-bind="value:IssueDate,mask:'date'" id="form-group-input " placeholder="IssueDate" disabled>
                            </div>
                        </div>
                        <div class="form-group col-lg-12">
                            <label class="col-lg-6 control-label" for="Number">Expiry Date</label>
                            <div class="col-lg-6">
                                <input type="text" class="form-control" required data-bind="value:ExpiryDate,mask:'date'" id="form-group-input " placeholder="ExpiryDate" disabled>
                            </div>
                        </div>
                        <div class="form-group col-lg-12">
                            <div class="col-lg-6"></div>
                            <div class="col-lg-6">
                                <input type="button" data-bind="click:$root.SaveCompanyLicense,value:$root.LicenseStatus" class="btn btn-success" title="Save" />

                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                </div>
            </div>
        </div>
    </div>
    <!-- Info boxes -->
    <div class="row">
        <div class="col-lg-12">
            <div class="box box-success">
                <div class="box-header">
                    <div class="">
                        <div class="btn-group">
                            <button type="button" class="btn btn-default" data-bind="click:ShowModal"><i class="fa fa-plus-square text-green">&nbsp;@T("Create")</i></button>
                            <button type="button" class="btn btn-default" data-bind="click:Select"><i class="fa fa-pencil text-blue">&nbsp;@T("Edit")</i></button>
                            <button type="button" class="btn btn-default" data-bind="click:Delete"><i class="fa fa-trash text-red">&nbsp;@T("Delete")</i></button>
                            <button type="button" class="btn btn-default" data-bind="click:ApproveSuspend"><i class="fa fa-check text-orange">&nbsp;@T("Suspend/Approve")</i></button>
                            <button type="button" class="btn btn-default" data-bind="click:ShowCompanyLoginModal"><i class="fa fa-key text-blue">&nbsp;@T("Login")</i></button>
                            <button type="button" class="btn btn-default" data-bind="click:ShowCompanyLicenseModal"><i class="fa fa-certificate text-aqua">&nbsp;@T("License")</i></button>
                            <button type="button" class="btn btn-default" data-bind="click:RefreshKendoGrid"><i class="fa fa-refresh text-green">&nbsp;@T("Refresh")</i></button>
                        </div>
                    </div>
                </div>
                <div class="box-body">
                    <div class="row">
                        <div class="col-lg-12" data-bind="kendoGrid:KendoGridOptions">
                            <div id="companyKendoGrid">

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script type="text/html" id="mode-button-template">
        <span class="glyphicon glyphicon-plus" data-bind="text:$root.ModeOfButton"></span>
    </script>
    <!-- /.row -->
    <!-- /.row -->
    <!-- Main row -->
    <!-- /.row -->
</section>

@if (Request.IsAjaxRequest())
{
    <script type="text/javascript">
        ko.cleanNode(document.getElementById("partial-render"));
        var obj = new companyController();
        ko.applyBindings(obj, document.getElementById("partial-render"));

        function RestrictSpace() {
            if (event.keyCode == 32) {
                event.returnValue = false;
                return false;
            }
        };
    </script>
}
else
{
    @section scripts
    {
        <script type="text/javascript">
            var obj = new companyController();
            ko.applyBindings(obj);

            function RestrictSpace() {
                if (event.keyCode == 32) {
                    event.returnValue = false;
                    return false;
                }
            };
        </script>
    }
}


